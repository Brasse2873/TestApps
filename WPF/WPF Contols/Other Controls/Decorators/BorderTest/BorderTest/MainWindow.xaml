<Window x:Class="BorderTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Border 
            Background="Yellow"
            BorderThickness="10,5,20,1" 
            Margin="12" 
            CornerRadius="45"
            Padding="50"
            >
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE8572C" Offset="0"/>
                    <GradientStop Color="#FF0C1CEA" Offset="0.5"/>
                    <GradientStop Color="#FFE6FD00" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Button>Button1</Button>
        </Border>

    </Grid>
</Window>
