<Window x:Class="BindToPropertyOfCodeBehind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="103.666" Width="230"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">

    <Grid Margin="10">
        <TextBox HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="190"
        Text="{Binding MyString}" />

        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="190" Click="Button_Click"/>
    </Grid>
</Window>
