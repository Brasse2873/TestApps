<Window x:Class="EmbeddedResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="500*"/>
        </Grid.RowDefinitions>
                
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>                            
        </Grid.ColumnDefinitions>
    
        <!-- Using Shorthand syntax -->
        <Image Source="Resources/Icon1.ico"  
               Name="image1" 
               Grid.Row="0" 
               Grid.Column="0" 
               Height="50" HorizontalAlignment="Left" Margin="10,10,10,10" Stretch="Fill" VerticalAlignment="Top" Width="50" />

        <!-- Using Pack URL -->
        <Image Source="pack://application:,,,/Resources/Icon1.ico"  
               Name="image2" 
               Grid.Row="1" 
               Grid.Column="0" 
               Height="100" HorizontalAlignment="Left" Margin="10,10,10,10" Stretch="Fill" VerticalAlignment="Top" Width="100" />

    </Grid>
</Window>
