<Window x:Class="GridTest.ColumnDefinitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColumnDefinitionWindow" Height="300" Width="573"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> 
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*" MinWidth="30" MaxWidth="40" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Name="textBlock1" Text="Column1" />
        <TextBlock Grid.Column="1" Grid.Row="0" Name="textBlock2" Text="Column1" />
        <TextBlock Grid.Column="2" Grid.Row="0" Name="textBlock3" Text="Column3" />
        <TextBlock Grid.Column="3" Grid.Row="0" Name="textBlock4" Text="Column4" />
        <Button Grid.Column="4" Content="Button1"/>
    </Grid>
</Window>
